{
  "expo": {
    "name": "ceuzinho",
    "slug": "ceuzinho-app",
    "scheme": "ceuzinho-scheme",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icons/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/icons/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true,
      "bundleIdentifier": "com.drew-ed043.ceuzinhoapp"
    },
    "android": {
      "softwareKeyboardLayoutMode": "pan",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/icons/adaptive-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.drew_ed043.ceuzinhoapp",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./src/assets/icons/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "O aplicativo $(PRODUCT_NAME) quer permissão para usar a câmera."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermision": "O aplicativo $(PRODUCT_NAME) quer permissão para acessar sua galeria de fotos."
        }
      ],
      [
        "react-native-edge-to-edge",
        {
          "android": {
            "parentTheme": "Default",
            "enforceNavigationBarContrast": false
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "image": "./src/assets/icons/splash-icon.png",
          "resizeMode": "contain",
          "imageWidth": 300
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/Roboto-Regular.ttf",
            "./src/assets/fonts/Roboto-Medium.ttf",
            "./src/assets/fonts/Roboto-Bold.ttf"
          ],
          "Android": {
            "fonts": [
              {
                "fontFamily": "Roboto",
                "fontDefinitions": [
                  {
                    "path": "./src/assets/fonts/Roboto-Regular.ttf",
                    "fontFamily": "Roboto",
                    "fontWeight": "400"
                  },
                  {
                    "path": "./src/assets/fonts/Roboto-Medium.ttf",
                    "fontFamily": "Roboto",
                    "fontWeight": "500"
                  },
                  {
                    "path": "./src/assets/fonts/Roboto-Bold.ttf",
                    "fontFamily": "Roboto",
                    "fontWeight": "700"
                  }
                ]
              }
            ]
          }
        }
      ],
      "expo-router",
      "react-native-edge-to-edge"
    ]
  }
}
